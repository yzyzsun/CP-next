  "devDependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@lezer/generator": "^0.16.0",
    "purescript": "^0.15.0",
    "spago": "^0.20.8",
    "vsce": "^2.7.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "antlr4": "^4.10.1"
  }
}
