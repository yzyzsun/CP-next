{
  "name": "cp-next",
  "version": "0.1.3",
  "description": "CP - The Next Generation",
  "private": true,
  "scripts": {
    "start": "spago run",
    "test": "spago test",
    "vscode": "cd vscode && vsce package",
    "lezer": "lezer-generator --noTerms --output lezer lezer.grammar",
    "antlr": "antlr -visitor -no-listener antlr/*.g4",
